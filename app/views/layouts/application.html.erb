<!DOCTYPE html>
<html>
  <head>
    <title>ShipPackages</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <!--Navigation Bar-->
    <nav class="navbar navbar-light bg-warning d-flex">
      <div class="container">
        <div class="logo">
          <a class="navbar-brand" href="<%= root_path %>">
            <%= image_tag 'logo.png' %>
          </a>
        </div>
        <div class="m-auto">
        <% if user_signed_in? %>
            <%= form_with url: search_path, method: :get, local: true, class: 'form-inline search-form' do |form| %>
              <%= form.text_field :query, value: params[:query], class: 'form-control mr-sm-2', placeholder: 'search' %>
            <% end %>
          <% end %>
        </div>
        <div class="user-section">
          <% if user_signed_in? %>
            <a href="<%= user_path(current_user)%>">
              <i class="fa fa-user"></i>
            </a>
          <%= link_to '<i class="fa fa-sign-in"></i>'.html_safe, destroy_user_session_path, method: :delete, class: "nav-link" %>
          <% else %>
            <a href="<%= new_user_session_path%>">
              <i class="fa fa-user"></i>
            </a>
          <% end %>
        </div>
      </div>
    </nav>

    <!--Main content-->
    <main class="container" style="min-height: 500px;">
      <%= yield %>
    </main>

    <!--Footer-->
    <footer class="container footer">
      <nav class="navbar d-flex">
        <ul>
          <li>ABOUT US</li>
          <li>PRIVACY</li>
          <li>TERMS</li>
          <li>LANGUAGE</li>
        </ul>
        <p> Â© 2019 ShipPackages </p>
      </nav>
    </footer>
  </body>
</html>

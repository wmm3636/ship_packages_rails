<%= form_for Post.new do |f| %>
  <div class="form-group">
    <%= f.text_area :description, class: "col-lg-12" %>
  </div>
  <div class="form-group">
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.text_field :user_id, value: current_user.id, class: 'd-none' %>
  </div>
  <br>
  <div class="text-center">
    <%= f.submit 'Create', class: 'btn btn-secondary btn-block' %>
  </div>
<% end %>
